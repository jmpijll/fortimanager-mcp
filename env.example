# FortiManager Connection Settings
# Required: FortiManager hostname or IP address
FORTIMANAGER_HOST=192.168.1.99

# Authentication Method 1: API Token (Recommended for production)
# Generate token on FortiManager: execute api-user generate-key <username>
FORTIMANAGER_API_TOKEN=your-api-token-here

# Authentication Method 2: Username/Password (Session-based)
# Use this if API token is not available
# FORTIMANAGER_USERNAME=admin
# FORTIMANAGER_PASSWORD=your-password-here

# SSL/TLS Settings
# Set to false if using self-signed certificates (not recommended for production)
FORTIMANAGER_VERIFY_SSL=false

# Connection Settings
FORTIMANAGER_TIMEOUT=30
FORTIMANAGER_MAX_RETRIES=3

# MCP Server Settings
MCP_SERVER_PORT=8000
MCP_SERVER_HOST=0.0.0.0

# Tool Loading Mode
# Options: full, dynamic
# - full: Load all 590 tools (default, for large context windows)
# - dynamic: Load only meta-tools, execute tools on-demand (for small context windows)
FMG_TOOL_MODE=full

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/fortimanager-mcp.log

# Testing (Integration Tests Only)
# Set these when running integration tests
# TEST_ADOM=root
# TEST_DEVICE=test-device-001

